---
import { months } from '../declarations'
import { ViewTransitions } from "astro:transitions"
import Navigation from "../components/navigation.astro"

const { frontmatter } = Astro.props
const { title, date, topic, image } = frontmatter
const postDate = new Date(date)
---

<!doctype html>
<html lang="en" style="scrollbar-gutter: stable;">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>elbadalon√≠ | {title}</title>
		<link rel="icon" href="/elbadaloni.webp" />
		<script defer>
			document.addEventListener("astro:page-load", () => {
				document.querySelector("main#articles").querySelectorAll("a").forEach((element) => {
					element.setAttribute("target", "_blank")
				})
			})
		</script>
		<ViewTransitions />
		<meta name="title" content={`${title} | elbadalon√≠`} />
		<meta name="description" content="Noticies diaries de Badalona üèôÔ∏è" />
		<meta name="og:title" content={`${title} | elbadalon√≠`} />
		<meta property="og:image" content={image} />
		<meta property="og:url" content="badaloni.netlify.app" />
		<meta name="theme-color" content="#FFD500" />
	</head>
	<body class="bg-slate-50 w-full min-h-[100vh] text-start">
		<Navigation />
		<main class="max-w-[50em] m-auto p-[16px]" id="articles">
			<h1>
				{title}
			</h1>
			<p class="mt-[20px] text-gray-500 text-center">
				Publicat {postDate.getDate()} {" "+ months[postDate.getMonth()]} {" del "+ postDate.getFullYear()}

			</p>
			<slot />
		</main>
		<style is:inline>
			h1 {
				text-align: center;
				font-size: 25px;
				font-weight: 800;
				max-width: 500px;
				margin: auto;
				text-wrap: balance;
			}
			p {
				margin: auto;
				max-width: 800px;
				margin-top: 25px;
			}
			main a {
				color: blue;
				text-decoration: underline;
			}
			main img {
				border-radius: 15px;
				margin: auto;
				margin-top: 20px;
				margin-bottom: 20px;

				width: 100%;
				max-width: 750px;
				max-height: 450px;
				object-fit: cover;
				transition: 250ms;
				object-view-box: inset(0%);

			}
			main img:hover {
				object-view-box: inset(12%);
			}
			blockquote,
			iframe {
				margin: auto;
			}
		</style>
	</body>
</html>
